<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |form| %>
	<%= render 'shared/error_messages' %>
	
    <%= form.label :name, "Business Name" %>
    <%= form.text_field :name %>

    <%= form.label :address, "Address" %>
    <%= form.text_field :address %>
	
    <%= form.label :city, "City" %>
    <%= form.text_field :city %>

    <%= form.label :zipcode, "Zipcode" %>
    <%= form.text_field :zipcode %>

    <%= form.label :phone, "Phone Number" %>
    <%= form.text_field :phone, :placeholder => "(000)000-0000" %>
  
    <%= form.label :website, "Website" %>
    <%= form.text_field :website %>
  
    <%= form.label :hours, "Business Hours" %>
    <%= form.text_field :hours %>
  
    <%= form.label :other, "Other Information" %>
    <%= form.text_area :other %>
	
    <%= form.label :email %>
    <%= form.text_field :email %>

    <%= form.label :password %>
    <%= form.password_field :password %>

    <%= form.label :password_confirmation, "Confirmation" %>
    <%= form.password_field :password_confirmation %>

      <%= form.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
	  <p>Already Have An Account? <%= link_to "Sign in!", signin_path %></p>
  </div>

</div>