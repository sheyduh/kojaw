<% provide(:title, 'Home') %>

<div id="form">
	
	<%= search_form_for @search do |f| %>
	
	<%= f.label :other_or_category_cont, "Kojaw?",class: "search_tags" %>
	<%= f.text_field :other_or_category_cont, :placeholder => "Doctor, Supermarket, etc." %>

	<%= f.label :city_cont, "City?",class: "search_tags" %>
	<%= f.text_field :city_cont, :placeholder => "San Francisco, 94111, etc."  %>
	
	<%= f.label :name_cont, "Business Name",class: "search_tags" %>
	<%= f.text_field :name_cont, :placeholder => "If you know the name of the business you're looking for, enter it here" %>
	
    <%= f.submit "Search", class: "btn btn-large btn-primary" %>	
	
<% end %>

</div>

